{
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module",
        "allowImportExportEverywhere": false,
        "codeFrame": false
    },
    "root": true,
    "env": {
        "browser": true,
        "es6": true,
        "jest/globals": true
    },
    "extends": ["airbnb", "eslint:recommended", "prettier", "plugin:react-hooks/recommended", "plugin:jest/recommended", "plugin:jsdoc/recommended", "plugin:promise/recommended"],
    "plugins": ["babel", "prettier", "react-hooks", "jest"],
    "rules": {
        "react/jsx-uses-react": "off",
        "react/react-in-jsx-scope": "off",
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".tsx"] }],
        "react/jsx-indent": "off",
        "react/jsx-indent-props": [2, 4],
        "react/jsx-props-no-spreading": ["error", {
            "html": "enforce",
            "custom": "ignore",
            "explicitSpread": "enforce",
            "exceptions": []
        }],
        "prettier/prettier": ["error", { "singleQuote": true }],
        "import/extensions": ["error", { "ignore": ["ts", "tsx"] }],
        "no-multi-str": "off",
        "import/prefer-default-export": "off",
        "babel/no-invalid-this": 1,
        "babel/object-curly-spacing": ["error", "always"],
        "babel/quotes": ["error", "single", { "avoidEscape": true }],
        "babel/semi": 1,
        "babel/no-unused-expressions": 1,
        "no-restricted-globals": "warn",
        "react/forbid-prop-types": "warn",
        "react/require-default-props": "off",
        "react/no-unused-prop-types": "warn",
        "no-plusplus": "off",
        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps": "error",
        "jsdoc/require-param-description": "off",
        "jsdoc/require-returns-description": "off",
        "valid-jsdoc": "off",
        "no-bitwise": "off",
        "jsx-a11y/click-events-have-key-events": "off",
        "promise/catch-or-return": ["error", { "allowFinally": true }],
        "arrow-body-style": ["error", "as-needed"],
        "react/function-component-definition": ["error",  {
            "namedComponents": "arrow-function",
            "unnamedComponents": "arrow-function"
        }]
    },
    "overrides": [
        {
            "files": ["*.test.js", "src/test/**/*.js"],
            "rules": {
                "prefer-promise-reject-errors": "off",
                "promise/always-return": "off",
                "promise/catch-or-return": "off",
                "promise/param-names": "off",
                "promise/no-callback-in-promise": "off",
                "react/prop-types": "off",
                "react/jsx-props-no-spreading": "off",
                "import/no-extraneous-dependencies": "off"
            }
        }
    ],
    "settings": {
        "ecmascript": 6,
        "import/resolver": {
            "node": {
                "extensions": [".js", ".jsx"]
            }
        },
        "jsdoc": {
            "mode": "typescript"
        }
    }
}
